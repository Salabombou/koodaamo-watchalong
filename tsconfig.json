{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "webpack.*.ts"],
  "exclude": ["node_modules", ".webpack", "src/bitfield-compat.js"]
}
